{
  "name": "chimera-trading-terminal",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5000",
    "build": "tsc && vite build",
    "preview": "vite preview --host 0.0.0.0 --port 5000",
    "server": "ts-node server/main.ts",
    "server:dev": "nodemon server.js",
    "start:terminal-api": "cd apps/terminal-api && npm start",
    "start:bot-equities": "cd apps/bot-equities && npm start",
    "start:risk-manager": "cd apps/risk-manager && npm start",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:push": "prisma db push",
    "backup": "chmod +x scripts/backup.sh && ./scripts/backup.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/redis": "^4.0.10",
    "@types/ws": "^8.18.1",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.263.1",
    "node-cron": "^4.2.1",
    "nodemon": "^3.1.10",
    "prisma": "^5.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0",
    "redis": "^5.8.2",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "ws": "^8.18.3",
    "zod": "^4.1.5",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "typescript": "^5.2.2",
    "vite": "^7.1.4"
  }
}
